<%- include("partials/header.ejs") %>

<% if(locals.title[idx] && locals.desc[idx]) { %>
<div class="blog container mt-4">
    <div class="col-lg-12">
        <h2 class="display-5 fw-bold text-body-emphasis lh-1 mb-3"> <%= title[idx] %> </h2>
        <p class="lead mt-4"> <%= desc[idx] %> </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
          <a href="/edit/<%= idx %>"><button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Edit</button></a>
          <a href="/delete/<%= idx %>"><button type="button" class="btn btn-danger btn-lg px-4">Delete</button></a>
        </div>
    </div>
</div>
<% } %>

<%- include("partials/footer.ejs") %>